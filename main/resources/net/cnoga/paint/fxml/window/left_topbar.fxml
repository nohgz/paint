<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<MenuBar xmlns:fx="http://javafx.com/fxml"
  fx:controller="net.cnoga.paint.core.fxml_controllers.window.LeftTopbarController">
  <Menu text="File">
    <MenuItem fx:id="left_topbar_new_file" text="New" onAction="#onFileNew">
      <graphic>
        <ImageView fitHeight="16" fitWidth="16">
          <Image url="@../../icons/menu/new_icon.png"/>
        </ImageView>
      </graphic>
    </MenuItem>

    <MenuItem fx:id="left_topbar_file_open" text="Open" onAction="#onFileOpen">
      <graphic>
        <ImageView fitHeight="16" fitWidth="16">
          <Image url="@../../icons/menu/open_icon.png"/>
        </ImageView>
      </graphic>
    </MenuItem>

    <MenuItem fx:id="left_topbar_file_save" text="Save" onAction="#onFileSave">
      <graphic>
        <ImageView fitHeight="16" fitWidth="16">
          <Image url="@../../icons/menu/save_icon.png"/>
        </ImageView>
      </graphic>
    </MenuItem>

    <MenuItem fx:id="left_topbar_file_save_as" text="Save As" onAction="#onFileSaveAs">
      <graphic>
        <ImageView fitHeight="16" fitWidth="16">
          <Image url="@../../icons/menu/save_as_icon.png"/>
        </ImageView>
      </graphic>
    </MenuItem>

    <MenuItem fx:id="left_topbar_exit" text="Exit Pain(t)" onAction="#onAppExit">
      <graphic>
        <ImageView fitHeight="16" fitWidth="16">
          <Image url="@../../icons/menu/exit_icon.png"/>
        </ImageView>
      </graphic>
    </MenuItem>
  </Menu>

  <Menu text="Edit">
  </Menu>

  <Menu text="View">
  </Menu>

  <Menu text="Image">

    <MenuItem fx:id="left_topbar_rotate90" text="Rotate 90" onAction="#onRotate90"/>
    <MenuItem fx:id="left_topbar_rotate180" text="Rotate 180" onAction="#onRotate180"/>
    <MenuItem fx:id="left_topbar_rotate270" text="Rotate 270" onAction="#onRotate270"/>
    <MenuItem fx:id="left_topbar_flipHorizontal" text="Flip Horizontal" onAction="#onFlipHorizontal"/>
    <MenuItem fx:id="left_topbar_flipVertical" text="Flip Vertical" onAction="#onFlipVertical"/>
  </Menu>

</MenuBar>
