<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<MenuBar xmlns:fx="http://javafx.com/fxml"
  fx:controller="net.cnoga.paint.core.fxml_controllers.window.LeftTopbarController">
  <Menu text="File">
    <MenuItem onAction="#onFileNew" text="New" fx:id="left_topbar_new_file">
      <graphic>
        <ImageView fitHeight="16" fitWidth="16">
          <Image url="@../../icons/menu/new_icon.png"/>
        </ImageView>
      </graphic>
    </MenuItem>

    <MenuItem onAction="#onFileOpen" text="Open" fx:id="left_topbar_file_open">
      <graphic>
        <ImageView fitHeight="16" fitWidth="16">
          <Image url="@../../icons/menu/open_icon.png"/>
        </ImageView>
      </graphic>
    </MenuItem>

    <MenuItem onAction="#onFileSave" text="Save" fx:id="left_topbar_file_save">
      <graphic>
        <ImageView fitHeight="16" fitWidth="16">
          <Image url="@../../icons/menu/save_icon.png"/>
        </ImageView>
      </graphic>
    </MenuItem>

    <MenuItem onAction="#onFileSaveAs" text="Save As" fx:id="left_topbar_file_save_as">
      <graphic>
        <ImageView fitHeight="16" fitWidth="16">
          <Image url="@../../icons/menu/save_as_icon.png"/>
        </ImageView>
      </graphic>
    </MenuItem>

    <MenuItem onAction="#onAppExit" text="Exit Pain(t)" fx:id="left_topbar_exit">
      <graphic>
        <ImageView fitHeight="16" fitWidth="16">
          <Image url="@../../icons/menu/exit_icon.png"/>
        </ImageView>
      </graphic>
    </MenuItem>
  </Menu>

  <Menu text="Edit">
  </Menu>

  <Menu text="View">
  </Menu>

  <Menu text="Image">

    <MenuItem onAction="#onRotate90" text="Rotate 90" fx:id="left_topbar_rotate90"/>
    <MenuItem onAction="#onRotate180" text="Rotate 180" fx:id="left_topbar_rotate180"/>
    <MenuItem onAction="#onRotate270" text="Rotate 270" fx:id="left_topbar_rotate270"/>
    <MenuItem onAction="#onFlipHorizontal" text="Flip Horizontal"
      fx:id="left_topbar_flipHorizontal"/>
    <MenuItem onAction="#onFlipVertical" text="Flip Vertical" fx:id="left_topbar_flipVertical"/>
  </Menu>

</MenuBar>
